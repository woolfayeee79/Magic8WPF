<Window x:Class="Magic8Ball_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magic8Ball_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtQuestion" HorizontalAlignment="Left" Height="57" Margin="239,291,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="289"/>
        <Ellipse x:Name="eleBall" Fill="Black" HorizontalAlignment="Left" Height="237" Margin="239,29,0,0" Stroke="Black" VerticalAlignment="Top" Width="289"/>
        <TextBlock x:Name="txtAnswerres" HorizontalAlignment="Left" Height="62" Margin="261,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Background="#833de5" FontWeight="Bold"/>
        <Button x:Name="btnAnswer" Content="Button" HorizontalAlignment="Left" Height="57" Margin="570,291,0,0" VerticalAlignment="Top" Width="131" Click="BtnAnswer_Click"/>
        <Label x:Name="lblQuestion" Content="Question:" HorizontalAlignment="Left" Height="57" Margin="153,291,0,0" VerticalAlignment="Top" Width="82" FontSize="14" FontWeight="Bold"/>

    </Grid>
</Window>
